<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN, cannot be changed between the plugin versions. -->
    <id>cn.torna.torna</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Torna</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://torna.cn">Torna</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Torna Plugin, help you to push doc info to Torna. For more about Torna, please visit <a href="https://torna.cn">https://torna.cn</a>

        <br />
        <br />
        Usage:
        <br />
        <ul>
        <li>Way 1:Right click a Java file and select <b>Push Doc</b> (Push all apis in class)</li>
        <li>Way 2:Right click a package and select <b>Push Doc</b> (Push all apis in package)</li>
        <li>Way 3:Open a Java file and right click at class name and select <b>Push Doc</b> (Push all apis in class)</li>
        <li>Way 4:Open a Java file and right click at method name and select <b>Push Doc</b> (Push current api)</li>
        </ul>
        <br />
        <br />
        使用方式：
        <br />
        <ul>
        <li>方式1：右键选择Java文件点击 <b>Push Doc</b>（推送类中所有接口）</li>
        <li>方式2：右键选择包名 <b>Push Doc</b>（推送包下所有接口）</li>
        <li>方式3：打开Java文件，类名处右键 <b>Push Doc</b>（推送类中所有接口）</li>
        <li>方式4：打开Java文件，接口方法名处右键 <b>Push Doc</b>（推送当前接口）</li>
        </ul>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <resource-bundle>messages.MyMessageBundle</resource-bundle>
    <!-- Extensions defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
<!--        <toolWindow id="MyToolWindow" factoryClass="cn.torna.tornadoc.MyToolWindowFactory"-->
<!--                    icon="AllIcons.Toolwindows.ToolWindowPalette"/>-->
        <notificationGroup id="torna.doc.notification.group" displayType="BALLOON"/>
    </extensions>

    <actions>
        <group id="cn.torna.tornadoc.action.ListYmlFilesAction" class="cn.torna.tornadoc.action.ListYmlFilesAction"
                text="Push Doc" description="Select a file to push" popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </group>

        <action id="cn.torna.tornadoc.action.OneYmlFileAction" class="cn.torna.tornadoc.action.OneYmlFileAction"
               text="Push Doc" description="Push doc">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>